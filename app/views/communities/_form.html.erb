  </div>
  <div class="rightContent">
    <div class="overLAy"></div>
    <div class="topNAv">
      <span class="blueColor leftMenuTab"><img src="/assets/images/tab.png" alt="" class=""> Categories</span>
      <div class="topRightNav">
        <span class="blueColor rightMenu"> Menu  <img src="/assets/images/down.png" alt="" class=""></span>
        <ul>
          <li class="activeMenu"><a href="#">News Feed</a></li>
          <li><a href="#">Hot Topics</a></li>
          <li><a href="#">Followers (25)</a></li>
          <li><a href="#">Following (100)</a></li>
          <li><a href="#">More <img src="/assets/images/arrowBlack.png" alt=""> </a></li>
        </ul>
      </div>
    </div>
    <div class="blueBkg">
      <div class="innerWIdth550">
        <span><img src="/assets/images/comm.png" alt=""></span>
        Your Community
        <%= link_to 'Back', :back, :class=>"back" %>
      </div>
    </div>
    <%= form_for(@community) do |f| %>
  <% if @community.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@community.errors.count, "error") %> prohibited this community from being saved:</h2>

      <ul>
      <% @community.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="clearfix innerWIdth550 tac ">
      <div class="whiteBox mt90">
        <div class="userTHumb userTHumbRight">
          <a href="#" class="profileImg"><img src="<%= current_user.img %>" alt=""></a>
          <div class="nameLocation">
            <a href="#"><%= current_user.profile.try(:screen_name) %></a><br>
            <span class="location"><%= current_user.profile.try(:country) %></span>
          </div>
        </div>
        <div class="uploadBoxOuter font14">
         <%= f.file_field :image, class: "post post_image", style: "visibility: hidden; width: 1px; height: 1px" ,:onchange => "showimagepreview(this)" %>
       
           <a href="#"  onclick="$('.post_image').click();">
            <img src="../assets/images/photo.png" alt="" id='imgprvw'><%=link_to 'X','#',class: 'remove_image',:style=>'display:none;'%>
       
          <div class="grayBig mt20 bold">Your logo will appear in the Community <br>
            and on your community pages.
          </div>
          Note: PNG, JPEG, or GIF only; max size 100 KB
        </div>
        <!-- container -->
      </div>
      <div class="clearfix whiteBox">
        <div class="clearfix formOuterPost tal">
          <div class="col-sm-6 pr10">
            <label>Select Category</label>
            <div class="selctFormBox">
              <%= f.hidden_field :category_id, :value=>'Select', class: " selectInputField" %>
              <%= f.text_field "category_id", :value=>'Select', class: "selectInput" ,:id=>'category'%>
              <%= f.select("category_id", Category.all.collect {|s| [s.name, s.id]}, {}, class: "select")  %>
              
            </div>
          </div>
          <div class="col-sm-6 pl10">
            <label>Type Topic</label>
            <%= f.text_field :topic, placeholder: "Topics", class: "inputTextW small"%>
          </div>
    
          <div class="col-sm-12">
            <label class="font20">Write Your Headline</label>
            <%= f.text_field :headline, class: "inputTextW small" %>
           
          </div>
          <div class="col-sm-12">
            <label class="">Slogan of Community </label>
             <%= f.text_field :slogan,class: "inputTextW small" %>
          </div>
          <div class="col-sm-12">
            <label class="">Write Something</label>
            <%= f.text_area :description, class: "inputTextW small" %>
          </div>
          <div class="col-sm-12   pr10  ">
            <label>Invite Friends</label> 
            <input type="text"  class="inputTextW small ">
          </div>
          <div class="col-sm-12">
          <%= f.submit "Create Community", class: "blueBtn" %>
                  <a href="#" class="grayBtn">Cancel</a> 
       
          </div>
        </div>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>


