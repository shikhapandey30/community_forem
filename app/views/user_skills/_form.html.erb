<%= nested_form_for(@user_skill) do |f| %>
  <% if @user_skill.errors.any? %>
    <div id="error_explanation">
      <!-- <h2><%#= pluralize(@user_skill.errors.count, "error") %> prohibited this user_skill from being saved:</h2> -->
      <ul>
      <% @user_skill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :user_id,:value=>current_user.id %>
  </div>
  <h1>Enter Skills</h1>
<%= f.fields_for :skills do |skill| %>
<%= skill.label :name %><br/>
 <%= skill.text_field :name %>
<%= skill.link_to_remove "Remove this skill" %>
<% end %>
<p><%= f.link_to_add "Add a skill", :skills %></p>
</br></br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
