<p id="notice"><%= notice %></p>

<h1>Listing Organisations</h1>

<table>
  <thead>
    <tr>
      <th>Employment detail</th>
      <th>Designation</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Current company</th>
      <th>Job profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
        <td><%= organisation.employment_detail_id %></td>
        <td><%= organisation.designation %></td>
        <td><%= organisation.start_date %></td>
        <td><%= organisation.end_date %></td>
        <td><%= organisation.current_company %></td>
        <td><%= organisation.job_profile %></td>
        <td><%= link_to 'Show', organisation %></td>
        <td><%= link_to 'Edit', edit_organisation_path(organisation) %></td>
        <td><%= link_to 'Destroy', organisation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

