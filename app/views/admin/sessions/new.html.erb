<div class="bodyCont">
<!--  Header Start -->
  <div class="headerBkg"></div>
  <div class="loginOuter">
    <div class="loginInner">
      <a href="#" class="logoShadow  wow fadeIn" data-wow-delay="" data-wow-duration="1.5s">
        <img src="/assets/images/logoShadow.png">
      </a>
      <div class="login">
        <div class="loginForm">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            
            <%= f.email_field :email, autofocus: true, placeholder: "Enter Your Email", class: "inputText" %>
            
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "inputText"%>

            <div class="clearfix"></div>

            <%= f.submit "Login", class: "darkBlueBtn inputSubmit" %>
          <% end %>
        </div>
      </div>
      <div class="loginForm frgtPass">
        <form method="post">
          <input type="text" placeholder="Enter Your Email" class="inputText">     
          <input type="submit" value="Submit" class="darkBlueBtn inputSubmit">
          <a href="javascript:void(0)" class="fr font12 backLogin"> Back</a>
          <div class="clearfix"></div>
        </form>
      </div>
    </div>
  </div>
</div>
