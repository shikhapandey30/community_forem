<div>
  <% flash.each do |key, value| %>
    <div class="alert alert-info fade in" id="flash-message">
      <a href="#" data-dismiss="alert" class="close" onclick="$('#flash-message').hide()"> X </a>
      <%= value %>
    </div>
  <% end %>
</div>

<style>
#flash-message{
	 float: right;
    width: 254px;
}
.alert {
padding: 8px 35px 8px 14px;
margin-bottom: 18px;
color: #c09853;
text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
background-color: #fcf8e3;
border: 1px solid #fbeed5;
-webkit-border-radius: 4px;
-moz-border-radius: 4px;
border-radius: 4px;
}

.alert-heading {
color: inherit;
}

.alert .close {
position: relative;
top: -2px;
right: -21px;
line-height: 18px;
}

.alert-danger,
.alert-error {
color: #b94a48;
background-color: #f2dede;
border-color: #eed3d7;
}

.alert-block {
padding-top: 14px;
padding-bottom: 14px;
}


.alert-block &gt; p,
.alert-block &gt; ul {
margin-bottom: 0;
}

.alert-block p + p {
margin-top: 5px;
}


.alert-success {
    background-color: #338e70;
    border-color: #338e70;
    color: #fff;
}

.alert-danger,
.alert-error {
color: #b94a48;
background-color: #f2dede;
border-color: #eed3d7;
}

.alert-info {
color: #fff;
background-color: #338e70;
border-color: #bce8f1;
}
.close{float: right;}
</style>