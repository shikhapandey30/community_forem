<%= form_for(@forum_poll) do |f| %>
  <% if @forum_poll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@forum_poll.errors.count, "error") %> prohibited this forum_poll from being saved:</h2>

      <ul>
      <% @forum_poll.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category_id %><br>
      <%=  f.select(:category_id , Category.all.collect {|u| [u.name, u.id]}, :prompt => 'Select')  %>
  </div>
  <div class="field">
   <%= f.label :topic_id %><br>
     <%=  f.select(:topic_id ,Topic.all.collect {|u| [u.name, u.id]}, :prompt => 'Select')  %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :visibility %><br>
    <%= f.select :visibility, [ 'Public', 'Private','Just For My Network','Just For My Connection','Just For My Community', 'Other' ], :prompt => 'Select One' %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.datetime_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.datetime_select :end_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
