<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :image%><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :site_link %><br>
    <%= f.text_field :site_link %>
  </div>
  <div class="field">
    <%= f.label :file %><br>
   <%= f.file_field :file%>
  </div>

  <div class="field">
    <%= f.label :video %><br>
   <%= f.file_field :video %>
  </div>

  <div class="field">
    <%= f.label "Category" %><br>
   <%= f.text_field :category_id %>
  </div>

  <div class="field">
    <%= f.label :title%><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
    
  <div class="field">
    <%= f.label :visibility %><br>
    <%= f.radio_button :visibility, true, :checked => true %>
    <%= f.radio_button :visibility, false %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.text_field :start_date,:class=>"datepicker" %>
  </div>
  <div class="field">
    <%= f.label :expiration_date %><br>
    <%= f.text_field :expiration_date,:class=>"datepicker" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
