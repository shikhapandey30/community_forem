<div class="mainCOntnt">

  <%=render "layouts/left_panel"%>  

  <div class="rightContent">
    <div class="overLAy"></div>
    <div class="postCover posRel" style="background-image: url('<%=@post.try(:upload).try(:image).try(:url)%>')">
      <div class="postCoverBkg ">
        <div class="clearfix innerWIdth550 posRel">
          <div class="pTitltOuter">
            <div class="postTitle">
              <%= @post.title %>
            </div>
            <a href="#" class="backBtn">Back</a>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix innerWIdth550 tac ">
      <div class="clearfix whiteBox borderTop mt0 mb10 pb0">
        <div class="clearfix formOuterPost tal padding10-0">
          <div class="col-sm-12 mb10">
            <div class="clearfix userInfo posRel">
              <a href="#" class="userImg"><img src="<%= @post.user.img %>" alt=""></a>
              <a href="#" class="userNAme"><%= @post.user.try(:screen_name) %></a>
              <br>
              <span class="font13"><%#= @designation %></span>
              <div class="fr grayColor tar"><%= time_ago_in_words(@post.created_at.strftime("%d %b")) %><br>
                <a href="#"><img src="/assets/images/add.png" alt=""></a>
                <a href="#">Follow</a>
              </div>
            </div>
            <div class="uniOuter">
              <div class="mt20 blackColor ">
                <p><%= @post.try(:description).try(:html_safe) %></p>
                <a href="<%=root_path(id: @post.id)%>" class="listen whiteBtn" data-remote="true"><img src="/assets/images/audio38.png" alt=""> Listen this post </a>
              </div>
            </div>
          </div>
          <div class="clearfix"></div>
          <div class="commentSec">
           <span class="grayColor font12"><span class="post_like_count"><%= @post.likes.count%></span> Likes &nbsp; &nbsp; <span class="post_dislike_count"><%= @post.dislikes.count%></span> Dislikes &nbsp; &nbsp;<span id="comments_count"><%= @comments.count %> <%= @comments.count == 1 ? 'Comment' : 'Comments' %></span> &nbsp; &nbsp; 468 shares</span>
            <div class="cmntSec">
              <%if @post.liked?(current_user).present?%>
                <%=link_to image_tag("images/up.png"), post_likes_path(@post), method: :post, remote: true,:class=>'like_image_post_liked'%>
              <%else%>
                <%=link_to image_tag("images/up.png"), post_likes_path(@post), method: :post, remote: true,:class=>'like_image_post'%>
              <%end%>
              <!-- <a href="#"><img src="/assets/images/down1.png" alt=""></a> -->
              <%if @post.disliked?(current_user).present?%>
                <%=link_to image_tag("images/down1.png"), post_dislikes_path(@post), method: :post, remote: true,:class=>'dislike_image_post_disliked'%>
              <%else%>
                <%=link_to image_tag("images/down1.png"), post_dislikes_path(@post), method: :post, remote: true,:class=>'dislike_image_post'%>
              <%end%>
              <a href="#" class="shareLInk"><img src="/assets//assets/images/share.png" alt=""></a>
              <a href="#" class="shareArrow"><img src="/assets/images/arrowSmall.png" alt=""></a>
              <input type="button" value="Add Your Comment" class="addCmnt inputTextW small" id="comment_button">
            </div>
          </div>
          <div class="clearfix"></div>
          <div id="comments">
            <%= render partial: "comments/comments_view", locals: { comments: @comments } %>
          </div>
          <div  class="clearfix borderNOne commentSec cmntRow" id="comment_box">
            <div class="clearfix userInfo posRel">
              <a href="javascript:;" class="userImg"><img src="<%= current_user.img %>" alt=""></a>
              <div class="addcomtntTA">
                <!-- Start Comment form -->
                <%= form_for(@comment, remote: true) do |f| %>
                  <div class="field">
                    <%= f.text_area :body, placeholder: "Add Your Comment", id: "comment_body", class: "addCmnt inputTextW small" %>
                    <%= hidden_field_tag :post_id, @post.id %>
                    <%= f.submit "Save", class: "blueBtn", id: "save_comment" %>
                    <a href="javascript:;" class="grayBtn" id="comment_cancel">Cancel</a> 
                  </div>
                <% end %>
                <!-- End comment form -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('.date').datetimepicker( {format: 'YYYY-MM-DD'});
  });
  $("#comment_cancel").click(function(event) {
    $("#comment_body").val("");
  });
  $("#comments").hide();
  $("#comment_box").hide();
  $("#comment_button").click(function(event) {
    event.preventDefault();
    $("#comments").toggle();
    $("#comment_box").toggle();
    $("html, body").scrollTop($('#comment_box').offset().top);
  });
  function reply_toggle(comment_id){
    // For Toggle
  }
  $("#save_comment").click(function(event) {
    event.preventDefault();
    if ($("#comment_body").val() == ""){
      event.preventDefault();
    }
    else {
      $.ajax({
        type: "post",
        dataType: "script",
        url: "/comments",
        data: {"comment[body]": $("#comment_body").val(), post_id: $("#post_id").val() }
      });
    }
  });
</script>