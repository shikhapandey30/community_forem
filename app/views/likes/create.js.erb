<%if @like.present? %>
$(".like_image_post_<%= params[:id].to_i %>").css('background-color', '#0bb4d3');
$(".like_image_post_liked_<%= params[:id].to_i %>").css('background-color', '#0bb4d3');
<%else%>
$(".like_image_post_<%= params[:id].to_i %>").css('background-color', '#fff');
$(".like_image_post_liked_<%=  params[:id] %>").css('background-color', '#fff');
<% end %>

<%if @dislike.present? %>
$("#dislike_image_post_<%= params[:id] %>").css('background-color', '#0bb4d3');
$("#dislike_image_post_disliked_<%= params[:id] %>").css('background-color', '#0bb4d3');
<%else%>
$("#dislike_image_post_<%= params[:id] %>").css('background-color', '#fff');
$("#dislike_image_post_disliked_<%=  params[:id] %>").css('background-color', '#fff');
<% end %>

$(".post_like_count_<%= params[:id].to_i %>").html('<%= @model.likes.count%>');
$(".dislike_count_<%= params[:id].to_i %>").html('<%= @model.dislikes.count%>');
