<div class="clearfix whiteBox">
  <div class="clearfix formOuterPost tal">
    <div class="col-sm-12 mb10">
      <div class="grayHD">EMPLOYMENT DETAILS <a href="#" class="blueBtn fr addBtn"> &nbsp;&nbsp; Add Employment</a></div>
    </div>
    <%=form_for @employment_detail, url: employment_profiles_path, remote: true do |f| %>
      <div class="col-sm-6 pr10">
        <label>Enter Designation </label>
        <%= f.text_field :designation, class: "inputTextW small " %>
        <!-- <input type="text" placeholder="Designation " class="inputTextW small  ">  -->
      </div>
      <div class="col-sm-6 pl10">
        <label>Enter Organization</label>
        <%= f.text_field :organization, class: " inputTextW small" %>
      </div>
      <%= hidden_field_tag :id, f.object.id%>
      <div class="col-sm-6 pr10">
        <label class="">Start Working From  </label>
        <%= f.text_field :start_work_date, class: "inputTextW small date fullWdth" %> 
      </div>
      <div class="col-sm-6 pl10">
        <label class="">Worked Till   </label>
         <%= f.text_field :worked_till, class: "inputTextW small date fullWdth" %>
      </div>
      <div class="clearfix"></div>
      <div class="col-lg-12 tar mt-10"><label><input type="checkbox"> Current Company</label></div>


      <div class="col-sm-12 ">
        <label class=""> Write Text </label>
        <%= f.text_area :description, class: "inputTextW small" %>
        <!-- <textarea placeholder="Write Text " class="inputTextW small "></textarea> -->
        <div class="font12 grayColor fr mt-10">300 Characters Max</div>
      </div>
      <div class="col-sm-12 mt10">
        <%= f.submit "Save", class: 'blueBtn' %>
        <%= link_to "Cancel", "#-",class: 'cancel grayBtn' %>
      </div>
    <%end%>
  </div>
</div>