              <span class="prevArrow"></span>

        
        <div class="newsFeedCon">
          <div class="subHd"><%= t('users.dashboard.newsfeed')%></div>
            <div class="shadeBox">
              <div class="feedTab">
                  <ul>
                      <li><a href="javascript:void(0)" class="active"><%= t('users.dashboard.my_friends')%></a></li>
                      <li><a href="javascript:void(0)"><%= t('users.dashboard.photos')%></a></li>
                    </ul>
                </div>
                <div>
                <div class="hitGoing"> 
                    <span><%= t('users.dashboard.whats_on_your_mind')%></span>
                   <div class="detBtn"><a href="javascript:void()" class="transition showErrorPopup" >Click To Share</a>
               </div> 
                    <div class="friendList">
                      <ul class="lists-posts"> 
                        <% @posts.each do |post|%> 
                          
                          <div id="posts">               
