<%if @suggested_contests.present?%>
  <%if suggest%>
    <div class="suggestedRow">
      <div class="clearfix conversationTop">
        <span class="bold grayColor"> <span class="font13 blackColor">Suggested Contests</span></span>
        <div class="fr"> <a href="/suggested_contests" class="grayColor">See More Contests <img src="/assets/images/rightArrow.jpg" alt=""></a> </div>
      </div>
    </div>
  <%end%>
  <%@suggested_contests.each_with_index do |contest, index|%>    
    <div class="whiteBox borderTop col-sm-6 pb0 fl" id="contest_<%=contest.id%>">
      <a href="<%=contest_path(contest)%>" class="pollImgOuter mt20 grpImg"><%=image_tag contest.img%></a>
      <a href="<%=contest_path(contest)%>" class="block groupName width"><%=contest.topic%></a>
      <div class="virwJoinBtn">
        <a class="btmBtn" href="#"> 0 Updates</a>
        <% if !contest.members.isMe?(current_user).present? %>
          <%=link_to "Join", join_contest_path(contest), class: "btmBtn", id: "joinContest_#{contest.id}", remote: true%>
        <%else%>
          <%=link_to "Joined", "#-", class: "btmBtn"%>
        <%end%>  
      </div>
    </div>
  <%end%>
<%end%>