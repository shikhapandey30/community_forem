<%if @unfollow %>
$(".following-button-<%= params[:followable_id] %>").html("Follow");
$(".user-folowed-<%= params[:followable_id] %>").html("<%= escape_javascript(render partial: 'follow_link', locals: { object:  @following.followable } ) %>");
<% else %>
$(".following-button-<%= params[:followable_id] %>").html("Unfollow");
$(".user-folowed-<%= params[:followable_id] %>").html("<%= escape_javascript(render partial: 'follow_link', locals: { object:  @following.followable } ) %>");

<%end%>
