	$(function() {
  var page = '<%= params[:page]%>',
      loading = false;

 
  function nearBottomOfPage() {
    return $(window).scrollTop() > $(document).height() - $(window).height() - 300;
  }

  $(window).scroll(function(){
    if (loading) {
      return;
    }

    if(nearBottomOfPage()) {
      $('.loader-img').show();
      loading=true;
      page++;
      $.ajax({
        url: '/dashboard?page=' + page,
        type: 'get',
        data: {data: page },
        dataType: 'script'
      });
    }
  });

  
}());