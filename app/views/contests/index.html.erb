<p id="notice"><%= notice %></p>

<h1>Listing Contests</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Topic</th>
      <th>Headline</th>
      <th>Description</th>
      <th>Visibility</th>
      <th>Start date</th>
      <th>End date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contests.each do |contest| %>
      <tr>
        <td><%= contest.category_id %></td>
        <td><%= contest.topic %></td>
        <td><%= contest.headline %></td>
        <td><%= contest.description %></td>
        <td><%= contest.visibility %></td>
        <td><%= contest.start_date %></td>
        <td><%= contest.end_date %></td>
        <td><%= contest.user_id %></td>
        <td><%= link_to 'Show', contest %></td>
        <td><%= link_to 'Edit', edit_contest_path(contest) %></td>
        <td><%= link_to 'Destroy', contest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

